---
import { Image } from "astro:assets";
import Layout from "./Layout.astro";
import Container from "@/components/Container.astro";
import FooterPage from "@/components/contact/FooterPage.astro";
import Point from "@/assets/icons/point.svg"

const { frontmatter } = Astro.props;
const { service, description, details ,image1, image2 } = frontmatter
---
<Layout title={service}>
    <section class="relative h-[380px] md:h-[350px] w-full overflow-hidden p-3">
        <Image 
            src={image2.src} 
            alt="Imagen ilustrativa del servicio" 
            class="absolute inset-0 w-full h-full object-cover object-center"
            loading="eager"
            width={100}
            height={100}
        />
        <div class="absolute inset-0 bg-[#092553] opacity-60"></div>
        <div class="relative z-10 h-full flex flex-col justify-center items-center text-center px-4 max-w-[800px] mx-auto">
            <h2 class="text-white font-bold text-[28px] md:text-3xl lg:text-[42px] mb-5 text-balance lg:leading-tight">{service}</h2>
        </div>
    </section>
	
    <main class="px-4">
        <Container>
            <Image 
                src={image2.src} 
                alt="Page Header" 
                class="w-full h-[450px] md:max-h-[450px] object-cover object-center pt-20 pb-10"
                loading="eager"
                width={100}
                height={100}
            />
            <section class="flex flex-col md:flex-row gap-6 mb-12">
                <section class="md:w-[70%]">
                    <h2 class="text-2xl font-bold text-blueDarker mb-5">Descripci√≥n del servicio</h2>
                    <p class="text-blueLight text-base md:text-[17px]">
                        <slot />
                    </p>
                </section>


                <aside class="md:w-[30%] bg-[#f1f4f9] p-10">
                    <h2 class="font-bold text-blueDarker text-[20px] border-b-[2px] border-dashed border-[#0c2d6250] pb-3 mb-4">Detalles del servicio</h2>
                    <ul class="space-y-4">
                        <li class="flex font-base text-blueDarker text-lg">
                            1.- {details.detail1}
                        </li>
                        <li class="flex font-base text-blueDarker text-lg">
                            2.- {details.detail2}
                        </li>
                        <li class="flex font-base text-blueDarker text-lg">
                            3.- {details.detail3}
                        </li>
                        <li class="flex font-base text-blueDarker text-lg">
                            4.- {details.detail4}
                        </li>
                    </ul>
                </aside>
            </section>
        </Container>
    </main>
    <FooterPage />
</Layout>