---
import Container from "../Container.astro";
import { Image } from "astro:assets";
import form from '@/assets/images/form.webp';
---
<section class="flex pb-20">
    <Container class="flex flex-col md:flex-row justify-center gap-5 items-start px-5 mt-20 overflow-hidden">
        <section class="md:w-1/2 ">
            <div class="mb-5">
                <p class="uppercase text-blueMain font-bold text-sm mb-3">Send a message</p>
                <h2 class="font-bold text-blueDarker text-[28px] lg:text-4xl mb-4">Make an appoinment!</h2>
                <p class="text-blueLight text-sm sm:text-[17px] ">Construction is a general term meaning the art and industrial science of old french construction building solution.</p>
            </div>
            <form class="flex flex-col">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-5 w-full">
                    <div class="flex flex-col">
                        <label>Name</label>
                        <input type="text" class="p-3 border border-[#eeeeee] w-full" placeholder="Name">
                    </div>
                    <div class="flex flex-col">
                        <label>Subject</label>
                        <input type="text" class="p-3 border border-[#eeeeee] w-full" placeholder="Subject">
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-5 w-full">
                    <div class="flex flex-col">
                        <label>Email</label>
                        <input type="email" class="p-3 border border-[#eeeeee] w-full" placeholder="Email">
                    </div>
                    <div class="flex flex-col">
                        <label>Phone</label>
                        <input type="text" class="p-3 border border-[#eeeeee] w-full" placeholder="Phone">
                    </div>
                </div>
                <div class="flex flex-col w-full">
                    <label>Name</label>
                    <input type="text" class="p-3 border border-[#eeeeee] w-full" placeholder="Message">
                </div>
                <button class="py-4 px-7 bg-blueMain w-full sm:w-fit mt-5 text-white font-bold">Send Message</button>
            </form>
        </section>
        <section class="w-full md:w-auto object-center object-cover">
            <div class="relative overflow-hidden group">
                <Image src={form} alt="Form" class="relative md:max-h-[547px] md:w-auto max-h-[300px] w-full bg-center object-center object-cover" />
                <div class="absolute inset-0 bg-gradient-to-t from-blueDarker to-transparent">
                <div class="absolute bottom-0 left-0 p-5 ">
                    <p class="text-white text-xl font-bold max-w-[200px]">We provide the best solutions possible</p>
                </div>
            </div>
        </section>
    </Container>


</section>